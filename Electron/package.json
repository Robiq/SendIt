{
  "name": "SendIt",
  "version": "1.0.0",
  "description": "Sendit",
  "repository": "https://github.com/Robiq/Project",
  "main": "init.js",
  "scripts": {
    "start": "electron init.js",
    "package-mac32": "electron-packager . --overwrite --platform=darwin --arch=ia32 --icon=Icon.icns --prune=true --out=release/",
    "package-mac64": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=Icon.icns --prune=true --out=release/",
    "package-win32": "electron-packager . --overwrite --asar --platform=win32 --arch=ia32 --icon=Icon.ico --prune=true --out=release",
    "package-win64": "electron-packager . --overwrite --asar --platform=win32 --arch=x64 --icon=Icon.ico --prune=true --out=release",
    "package-lin32": "electron-packager . SendIt --overwrite --asar --platform=linux --arch=ia32 --icon=Icon.png --prune=true --out=release",
    "package-lin64": "electron-packager . SendIt --overwrite --asar --platform=linux --arch=x64 --icon=Icon.png --prune=true ---out=release",
    "installer-mac32": "electron-installer-dmg .\\SendIt-darwin-ia32\\SendIt.app\\Contents\\MacOS SendIt --out=release/dmg --overwrite --icon=Icon.icns",
    "installer-mac64": "electron-installer-dmg .\\SendIt-darwin-x64\\SendIt.app\\Contents\\MacOS SendIt --out=release/dmg --overwrite --icon=Icon.icns",
    "installer-win32": "node installers/windows/createinstaller32.js",
    "installer-win64": "node installers/windows/createinstaller64.js",
    "installer-lin32": "electron-installer-debian --src release/SendIt-linux-ia32/ --arch i386 --config installers/debian.json",
    "installer-lin64": "electron-installer-debian --src release/SendIt-linux-x64/ --arch amd64 --config installers/debian.json",
    "package-mac": "npm run package-mac32 && npm run package-mac64",
    "package-win": "npm run package-win32 && npm run package-win64",
    "package-lin": "npm run package-lin32 && npm run package-lin64",
    "package-all": "npm run package-mac && npm run package-win && npm run package-lin",
    "installer-mac": "npm run installer-mac32 && npm run installer-mac64",
    "installer-win": "npm run installer-win32 && npm run installer-win64",
    "installer-lin": "npm run installer-lin32 && npm run installer-lin64",
    "installer-all": "npm run installer-mac && npm run installer-win && npm run installer-lin",
    "build-mac": "npm run package-mac && npm run installer-mac",
    "build-win": "npm run package-win && npm run installer-win",
    "build-lin": "npm run package-lin && npm run installer-lin",
    "build-all": "npm run package-all && npm run installer-all"
  },
  "license": "ISC",
  "devDependencies": {
    "clipboardy": "^1.1.4",
    "electron": "^1.7.9",
    "electron-installer-debian": "^0.7.1",
    "electron-installer-dmg": "^0.2.1",
    "electron-packager": "^10.1.0",
    "electron-winstaller": "^2.6.3"
  },
  "dependencies": {
    "clipboardy": "^1.1.4",
    "electron-prompt": "^0.4.0"
  },
   "optionalDependencies": {
    "appdmg": "0.4.5"
  }
}
